@{
    Layout = "~/Views/Shared/_AuthLayout.cshtml";
}

@using (@Html.BeginForm("Register", "Authorization", FormMethod.Post))
{
    <div class="d-flex justify-content-center align-items-center container mt-5">
        <div class="card" style="width: 24rem;">
            <div class="card-header text-center" style="background: #0d6efd" ))>
                <h1 style="color: white">Login</h1>
            </div>
            <div class="card-body justify-content-center">

                <div class="input-group mb-3">
                    Username:
                    <input type="text" name="username" class="form-control" value="" style="width: inherit" />
                </div>
                <div class="input-group mb-3">
                    Email:
                    <input type="text" name="email" class="form-control" value="" style="width: inherit"/>
                </div>

                <div class="input-group mb-3">
                    First Name:
                    <input type="text" name="firstname" class="form-control" value="" style="width: inherit"/>
                </div>

                <div class="input-group mb-3">
                    Last Name:
                    <input type="text" name="lastname" class="form-control" value="" style="width: inherit"/>
                </div>

                <div class="input-group mb-3">
                    Password:
                    <input type="text" name="password" class="form-control" value="" style="width: inherit"/>
                </div>

                <div class="row justify-content-end m-1" style="width: inherit">
                    <div>
                        <input name="submitbutton" class="btn btn-primary" type="submit" value="cancel" style="width: auto">
                        <input name="submitbutton" class="btn btn-primary" type="submit" value="OK" style="width: auto">
                    </div>
                </div>
            </div>
            <div class="card-footer justify-content-center" style="width: inherit">
                <div class="text-muted text-xl-end" style="width: auto">
                    @DateTime.Now.ToLongDateString()
                </div>
            </div>
        </div>
    </div>
}